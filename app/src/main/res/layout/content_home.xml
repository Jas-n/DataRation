<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jas_n.dataration.Home"
    tools:showIn="@layout/activity_home">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Daily Ration"
        android:id="@+id/daily_ration_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/daily_ration"
        android:indeterminate="false"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/daily_ration_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minHeight="15dp"
        android:maxHeight="15dp"
        android:theme="@style/AppTheme" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Weekly Ration"
        android:id="@+id/weekly_ration_text"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/daily_ration"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/weekly_ration"
        android:indeterminate="false"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/weekly_ration_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minHeight="15dp"
        android:maxHeight="15dp"
        android:theme="@style/AppTheme" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Monthly Ration"
        android:id="@+id/monthly_ration_text"
        android:layout_marginTop="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/weekly_ration" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/monthly_ration"
        android:indeterminate="false"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/monthly_ration_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minHeight="15dp"
        android:maxHeight="15dp"
        android:theme="@style/AppTheme" />

</RelativeLayout>